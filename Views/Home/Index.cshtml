    <script>

        function SendPreview(e) {
            var model = ValidAndGetData();
            if (model == undefined)
                return;

            e.preventDefault();

            try {
                $.ajax({
                    url: "/Home/Index",
                    type: "POST",
                    dataType: "json",
                    data: model,
                    success: function (data) {
                        if (data != undefined && data) {
                            $("#msgdiv").css("display", "block");
                            clear();
                        }
                    },
                    error: function (xhr, status, error) {
                        alert("Result: " + status + " " + error + " " + xhr.status + " " + xhr.statusText)
                    }
                });
            }
            catch (e) {
                console.log(e.messages);
            }
        }

        function ValidAndGetData() {
            var name = $("#name").val();
            var email = $("#email").val();
            var phone = $("#phone").val();
            var msg = $("#message").val();
            var subject = $("#subject").val();

            var phoneRegex = /^\d{10}$/;
            if (!phoneRegex.test(phone))
                return;

            if (name == "" || email == "" || phone == "" || msg == "" || subject == "")
                return;

            return { Name: name, Email: email, Subject: subject, Phone: phone, Message: msg }
        }

        function clear() {
            $("#name").val('');
            $("#email").val('');
            $("#phone").val('');
            $("#message").val('');
            $("#subject").val('');
        }
    </script>

